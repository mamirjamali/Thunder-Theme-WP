{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "defaultPalette": false,
            "palette": [
                {"slug": "th-white", "color": "rgb(255,255,255)", "name": "Thunder White"},
                { "slug": "th-gray-100", "color": "rgb(243 244 246)", "name": "Thunder Gray 100" },
                { "slug": "th-gray-200", "color": "rgb(229 231 235)", "name": "Thunder Gray 200" },
                { "slug": "th-gray-300", "color": "rgb(209 213 219)", "name": "Thunder Gray 300" },
                { "slug": "th-gray-400", "color": "rgb(156 163 175)", "name": "Thunder Gray 400" },
                { "slug": "th-gray-500", "color": "rgb(107 114 128)", "name": "Thunder Gray 500" },
                { "slug": "th-gray-600", "color": "rgb(75 85 99)", "name": "Thunder Gray 600" },
                { "slug": "th-gray-700", "color": "rgb(55 65 81)", "name": "Thunder Gray 700" },
                { "slug": "th-gray-800", "color": "rgb(31 41 55)", "name": "Thunder Gray 800" },
                { "slug": "th-gray-900", "color": "rgb(17 24 39)", "name": "Thunder Gray 900" },
                { "slug": "th-primary", "color": "rgb(239 68 68)", "name": "Thunder Primary" },
                { "slug": "th-accent", "color": "rgb(67 56 202)", "name": "Thunder Accent" },
                { "slug": "th-success", "color": "rgb(52 211 153)", "name": "Thunder Success" },
                { "slug": "th-info", "color": "rgb(96 165 250)", "name": "Thunder Info" },
                { "slug": "th-warning", "color": "rgb(251 146 60)", "name": "Thunder Warning" },
                { "slug": "th-danger", "color": "rgb(236 72 153)", "name": "Thunder Danger" }
            ],
            "background": true,
            "text": true,
            "link": true,
            "duotone": [
                {"slug": "th-orange-blue", "colors": ["#005a87","#ba5600"], "name": "Thunder Orange Blue"}
            ],
            "defaultGradients": false,
            "gradients": [
                {
                    "slug": "th-light-purple",
                    "name": "Thunder Sky Light",
                    "gradient": "radial-gradient( circle farthest-corner at 10% 20%,  rgba(97,186,255,1) 0%, rgba(166,239,253,1) 90.1% );"
                }
            ]
        },
        "blocks": {
            "core/site-title": {
                "color": {
                    "defaultPalette": true,
                    "palette": [
                      { "slug": "th-primary", "color": "#ef4444", "name": "Thunder Primary" }
                    ],
                    "link": true,
                    "custom": false,
                    "gradients": [],
                    "customGradient": false
                },
                "typography": {
                    "fontFamilies": [
                      { 
                        "fontFamily": "Pacifico, sans-serif", 
                        "slug": "th-pacifico",
                        "name": "Thunder Pacifico" 
                      }
                    ]
                }
            },
            "core/cover": {
                "color": {
                    "duotone": [],
                    "customDuotone": false
                }
            },
            "core/post-featured-image": {
                "appearanceTools": true,
                "spacing": {
                    "customSpacingSize": true,
                    "blockGap": true                 
                },
                "layout": {
                    "wideSize": ""
                }
            }
        },
        "typography": {
            "fontFamilies": [
                { 
                  "fontFamily": "Rubik, sans-serif", 
                  "slug": "th-rubik",
                  "name": "Thunder Rubik" 
                }
              ],
            "fontSizes": [
                { "slug": "small", "size": "0.75rem", "name": "Small" },
                { "slug": "medium", "size": "1.25rem", "name": "Medium" },
                { "slug": "large", "size": "2.25rem", "name": "Large" },
                { "slug": "x-large", "size": "3rem", "name": "Extra Large" },
                { "slug": "gigantic", "size": "3.75rem", "name": "Gigantic" }
              ],
            "customFontSize": true,
            "lineHeight": true,
            "dropCap": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": true,
            "textDecoration": true,
            "textTransform": true
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "customSpacingSize": true,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "blockGap": true
        }

    },
    "styles": {
        "color": {
            "text": "var(--wp--preset--color--th-gray-700)",
            "background": "var(--wp--preset--color--th-white)"
        },
        "elements": {
            "link": {
            "color": {
                "text": "var(--wp--preset--color--th-primary)"
            }
            }
        },
        "blocks": {
            "core/button": {
            "color": {
                "gradient": "var(--wp--preset--gradient--th-summer-dog)"
            }
            },
            "core/pullquote": {
            "border": {
                "width": "2px",
                "radius": "10px",
                "style": "solid",
                "color": "var(--wp--preset--color--th-primary)"
            }
            },
            "core/site-title": {
            "typography": {
                "fontFamily": "var(--wp--preset--font-family--th-pacifico)"
            }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--th-rubik)",
            "fontSize": "16px",
            "fontStyle": "normal",
            "fontWeight": "normal",
            "lineHeight": "inherit",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "spacing": {
            "margin": {
            "top": "0px",
            "bottom": "0px",
            "left": "0px",
            "right": "0px"
            },
            "padding": {
            "top": "0px",
            "bottom": "0px",
            "left": "0px",
            "right": "0px"
            },
            "blockGap": "4rem"
        }
    },
    "customTemplates": [
        {
            "name": "full-width-page",
            "title": "Full Width Page",
            "postTypes": [
                "page"
            ]
        }
    ]
}